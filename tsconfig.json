{ 
  "compileOnSave": false, 
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "resolveJsonModule": true,
    /* Basic Options */
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist", 
    /* Strict Type-Checking Options */
    "strict": true,   
    "types": [],   
    "esModuleInterop": true,                  
     /* Advanced Options */
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ],
}
